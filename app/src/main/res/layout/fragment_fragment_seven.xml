<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="Questions?"
        android:id= "@+id/description" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="85dp"

        android:textSize="20dp"
        android:text="Breakfast:"
        android:id= "@+id/breakfast" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:id= "@+id/breakfastInput" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="160dp"

        android:textSize="20dp"
        android:text="Lunch:"
        android:id= "@+id/lunch" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:id= "@+id/lunchInput" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="235dp"

        android:textSize="20dp"
        android:text="Dinner:"
        android:id= "@+id/dinner" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:id= "@+id/dinnerInput" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="310dp"

        android:textSize="20dp"
        android:text="Snacks:"
        android:id= "@+id/snacks" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:id= "@+id/snacksInput" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="385dp"

        android:textSize="20dp"
        android:text="Drinks:"
        android:id= "@+id/drinks" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:id= "@+id/drinksInput" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text = "Done"
        android:background="#FFFFFF"
        android:textColor="#255"
        android:textSize="15dp"
        android:padding="4dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="30dp"
        android:id= "@+id/done"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="75dp"

        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Question 1 out of 13"
        android:id= "@+id/questionStatus" />



</RelativeLayout>
