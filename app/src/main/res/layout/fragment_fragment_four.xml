<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="20dp"
        android:text="These questions are about ..."
        android:id= "@+id/description"/>

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:textSize="20dp"
        android:text="Questions"
        android:id= "@+id/question"/>

    />
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text = "All of the time "
        android:background="#FFFFFF"
        android:textColor="#255"
        android:padding="4dp"
        android:layout_marginTop="230dp"
        android:id= "@+id/choice1"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text = "Most of the time"
        android:background="#FFFFFF"
        android:layout_marginTop="310dp"
        android:textColor="#255"
        android:padding="4dp"
        android:id= "@+id/choice2"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text = "A good bit of the time"
        android:background="#FFFFFF"
        android:textColor="#255"
        android:padding="4dp"
        android:layout_marginTop="390dp"
        android:id= "@+id/choice3"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text = "Some of the time"
        android:background="#FFFFFF"
        android:textColor="#255"
        android:padding="4dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="230dp"
        android:id= "@+id/choice4"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text = "A little of the time"

        android:background="#FFFFFF"
        android:textColor="#255"
        android:padding="4dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="310dp"
        android:id= "@+id/choice5"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text = "None of the time"
        android:background="#FFFFFF"
        android:textColor="#255"
        android:padding="4dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="390dp"
        android:id= "@+id/choice6"/>


</RelativeLayout>
